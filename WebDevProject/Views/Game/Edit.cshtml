@model Game
@{
    string title = ViewBag.Action + " Game"; ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div> <div class="form-group">
        <label asp-for="Name">Name</label> <input asp-for="Name" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="Year">Year</label> <input asp-for="Year" class="form-control">
    </div>

    <div class="form-group">
        <label asp-for="RatingId">Rating</label> <select asp-for="RatingId" class="form-control">
            <option value="">select a rating</option> @foreach (Rating r in ViewBag.Ratings)
            {
                <option value="@r.RatingId">@r.Name</option>
            }
        </select>
    </div>
    <div style="margin-top: 16px;">
        <a asp-controller="Home" asp-action="ShowGames" class="btn btn-outline-primary" style="width: 10%;">Cancel</a>
        <button type="submit" class="btn btn-primary" style="width: 10%;">@ViewBag.Action</button>
    </div>
</form>
