@model List<Game>
@{
    ViewBag.Title = "My Games"; } <h2>Game List</h2>
<a asp-controller="Game" asp-action="Add">Add New Game</a>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Year</th>
            <th>Rating</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var game in Model)
        {
        <tr>
            <td>@game.Name</td>
            <td>@game.Year</td>
            <td>@game.Rating.RatingId</td>
            <td>
                <a asp-controller="Game" asp-action="Edit" asp-route-id="@game.GameId" asp-route-slug="@game.Slug">Edit</a>
                <a asp-controller="Game" asp-action="Delete" asp-route-id="@game.GameId" asp-route-slug="@game.Slug">Delete</a>
            </td>
        </tr>
        }
    </tbody>
</table> 